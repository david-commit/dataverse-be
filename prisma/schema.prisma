// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id              Int      @id @default(autoincrement())
  job_title       String
  job_description String
  job_details     String
  postedBy        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Blog {
  id               Int      @id @default(autoincrement())
  blog_title       String
  blog_description String
  blog_image       String
  blog_details     String
  postedBy         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ContactEntry {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
